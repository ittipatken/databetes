// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  name       String?
  lastname   String?
  products   Product[]
  buyed      Payhist[]
}

model Product {  
  id          Int     @id @default(autoincrement())
  name        String?
  price       Int?
  description String?
  quantity    Int?
  userId      Int
  seller      User    @relation(fields: [userId], references: [id])
}

model Payhist {
  id     Int @id @default(autoincrement())
  Userid Int
  amount Int
  owner User @relation(fields: [Userid], references: [id])
}
