// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  nationalId String    @unique
  name       String?
  lastname   String?
  amount     Int
  products   Product[]

  paid       Payhist[] @relation("sender")
  sold      Payhist[] @relation("receiver")
}

model Product {  
  id          Int     @id @default(autoincrement())
  name        String?
  price       Int?
  description String?
  quantity    Int?
  userId      Int
  seller      User    @relation(fields: [userId], references: [id])
}

model Payhist {
  id        Int @id @default(autoincrement())

  fromUser  Int
  sender    User @relation("sender", fields: [fromUser], references: [id])
  
  toUser    Int
  receiver  User @relation("receiver", fields: [toUser], references: [id])

  amount Int
}
